    <body>
        <%- include('components/navbar_header.ejs') %>


            <h1 style="text-align: center;">User Information </h1>

            <div>
                <h5 style="text-align: center;">Update your Preferred Language</h5>
                <div id="google_translate_element" style="text-align: center;"></div>
            </div>

            <div class="container">

                <form>
                    <fieldset class="mb-3" id="personalInfoFields" disabled>
                        <div class="form-group">
                            <label>Name: </label>
                            <input type="text" id="nameInput" class="form-control" placeholder="Enter your name">
                        </div>
                        <div class="form-group">
                            <label>Language: </label>
                            <input type="text" id="languageInput" class="form-control"
                                placeholder="Enter your preferred language">
                        </div>
                        <div class="form-group">
                            <label>City: </label>
                            <input type="text" id="cityInput" class="form-control" placeholder="Enter your City">
                        </div>

                    </fieldset>
                    <div class="d-flex justify-content-end mt-5">
                        <button type="button" class="btn btn-secondary" onclick="editUserInfo()">Update Info</button>
                        <span style="width: 10px"></span>
                        <button type="button" class="btn btn-info" onclick="saveUserInfo()">Save</button>
                    </div>

                    <div class="form-group" id="password-div">
                        <label>Current Password: </label>
                        <input type="text" id="current-password-input" class="form-control"
                            placeholder="Enter your new password">
                        <label>New Password: </label>
                        <input type="text" id="new-password-input" class="form-control"
                            placeholder="Enter your new password">
                        <button type="button" class="btn btn-secondary" onclick=changePassword()>Change
                            Password</button>
                    </div>

                </form>



            </div>
            <!-- <div>
                    <a class="btn btn-secondary" href="../login.html" id="logout-button">Logout</a>
                </div>
            </div> -->



